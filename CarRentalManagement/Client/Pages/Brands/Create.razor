@page "/brands/create/"

@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Brand</h3>
<hr />
<br />

<FormComponent ButtonText="Create Brand" OnValidSubmit="@CreateBrand" brand="brand" />


@code{
    Brand brand = new Brand();

    private async Task CreateBrand()
    {
        await _client.PostAsJsonAsync(Endpoints.BrandsEndpoint, brand);
        _navManager.NavigateTo("/brands/");
    }

}