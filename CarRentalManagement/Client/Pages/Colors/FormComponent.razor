<EditForm Model="@color" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">

        <div class="form-group">
            <label>Name:</label>
            <div>
                <InputText @bind-Value="@color.Name" class="form-control" />
                <ValidationMessage For="@(()=>color.Name)" />
            </div>
        </div>

    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">@ButtonText</button>
    }

    <BackToList Target="colors" />

</EditForm>

@code{
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Color color { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}